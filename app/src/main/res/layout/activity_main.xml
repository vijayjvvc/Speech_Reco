<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/retry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Retry"
        app:layout_constraintTop_toBottomOf="@+id/multiply_tv"/>

    <TextView
        android:id="@+id/addiction_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition +"
        android:background="@drawable/btn_bg_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sub_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MINUS -"
        android:background="@drawable/btn_bg_border"
        app:layout_constraintStart_toEndOf="@+id/addiction_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/multiply_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiply *"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divide_tv"
        app:layout_constraintTop_toBottomOf="@id/addiction_tv" />

    <TextView
        android:id="@+id/divide_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divide /"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_border"
        app:layout_constraintStart_toEndOf="@id/multiply_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_tv" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result will be here"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>